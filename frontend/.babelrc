{
  "presets": [
    [
      "@babel/preset-env",
      {
        "targets": { "node": "current" },
        "modules": "auto", // Let Babel decide module format
        "loose": true // Fixes some edge cases
      }
    ],
    "@babel/preset-react",
    "@babel/preset-typescript"
  ],
  "plugins": [
    "@babel/plugin-transform-modules-commonjs" // Force CommonJS for Jest
  ]
}
